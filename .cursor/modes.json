{
  "description": "Cursor IDE custom mode configuration",
  "version": "1.0.0",
  "modes": {
    "development": {
      "description": "Development mode - for daily development work",
      "contextFiles": [
        ".ai/quick-reference.md",
        ".ai/architecture.md",
        ".ai/tech-stack.md",
        ".ai/business-context.md",
        "AGENTS.md",
        "docs/fyi.md",
        "docs/fyi-context.md",
        "docs/fyi-development.md"
      ],
      "rules": [
        ".cursor/rules/angular.mdc",
        ".cursor/rules/typescript.mdc",
        ".cursor/rules/code-quality.mdc",
        ".cursor/rules/shared-imports.mdc"
      ],
      "tools": ["codebase_search", "read_file", "edit_file", "terminal"]
    },
    "architecture": {
      "description": "Architecture mode - for architecture design and decisions",
      "contextFiles": [
        ".ai/architecture.md",
        ".ai/database-overview.md",
        ".ai/api-overview.md",
        "docs/27-完整架構流程圖.mermaid.md",
        "docs/28-架構審查報告.md",
        "docs/30-資料表清單總覽.md",
        "docs/fyi.md",
        "docs/fyi-architecture.md",
        "docs/fyi-development.md",
        "docs/fyi-history.md",
        "docs/fyi-challenges.md"
      ],
      "rules": [
        ".cursor/rules/architecture.mdc",
        ".cursor/rules/git-model.mdc",
        ".cursor/rules/api-design.mdc",
        ".cursor/rules/security.mdc"
      ],
      "tools": ["codebase_search", "read_file", "mcp_Sequential_Thinking_sequentialthinking", "mcp_Software_Planning_Tool_*"]
    },
    "testing": {
      "description": "Testing mode - for writing and executing tests",
      "contextFiles": [
        ".ai/tech-stack.md",
        ".ai/quick-reference.md",
        "docs/38-測試指南.md"
      ],
      "rules": [
        ".cursor/rules/testing.mdc",
        ".cursor/rules/typescript.mdc",
        ".cursor/rules/code-quality.mdc"
      ],
      "tools": ["codebase_search", "read_file", "edit_file", "terminal", "run_terminal_cmd"]
    },
    "documentation": {
      "description": "Documentation mode - for writing and updating documentation",
      "contextFiles": [
        ".ai/architecture.md",
        ".ai/business-context.md",
        ".ai/quick-reference.md",
        "docs/README.md"
      ],
      "rules": [
        ".cursor/rules/code-quality.mdc"
      ],
      "tools": ["read_file", "edit_file", "codebase_search"]
    },
    "api-development": {
      "description": "API development mode - for API and database related development",
      "contextFiles": [
        ".ai/api-overview.md",
        ".ai/database-overview.md",
        ".ai/architecture.md",
        "docs/33-API-接口詳細文檔.md",
        "docs/30-資料表清單總覽.md",
        "docs/fyi.md",
        "docs/fyi-context.md",
        "docs/fyi-architecture.md"
      ],
      "rules": [
        ".cursor/rules/api-design.mdc",
        ".cursor/rules/error-handling.mdc",
        ".cursor/rules/security.mdc",
        ".cursor/rules/mcp-tools.mdc"
      ],
      "tools": ["codebase_search", "read_file", "edit_file", "mcp_supabase_*"]
    }
  },
  "defaultMode": "development",
  "note": "This configuration file is an example configuration. Actual Cursor IDE mode configuration should be set through Cursor Settings > Features > Chat > Custom modes. This file is for reference and documentation purposes only."
}

