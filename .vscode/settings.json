{
  // *******************************
  // GitHub Copilot 基礎設定
  // *******************************
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": true,
    "yaml": true,
    "html": true,
    "powershell": true,
    "javascript": true,
    "aspnetcorerazor": true
  },
  // 使用 OpenAI GPT-5-Codex 模型
  "github.copilot.selectedCompletionModel": "gpt-5-codex",
  // 啟用程式碼動作建議
  "github.copilot.editor.enableCodeActions": true,
  // 自動觸發重新命名建議
  "github.copilot.renameSuggestions.triggerAutomatically": true,
  // 啟用下一步編輯建議
  "github.copilot.nextEditSuggestions.enabled": true,

  // *******************************
  // GitHub Copilot Chat 設定
  // *******************************
  // 使用正體中文介面
  "github.copilot.chat.localeOverride": "zh-TW",
  // 使用專案範本
  "github.copilot.chat.useProjectTemplates": true,
  // 啟用範圍選擇
  "github.copilot.chat.scopeSelection": true,
  // 啟用 TypeScript 語言上下文
  "github.copilot.chat.languageContext.typescript.enabled": true,
  // 啟用思考工具 (推理模式)
  "github.copilot.chat.agent.thinkingTool": true,
  // 啟用程式碼搜尋功能
  "github.copilot.chat.codesearch.enabled": true,

  // *******************************
  // GitHub Copilot Chat - 內嵌聊天
  // *******************************
  // 啟用時間上下文
  "github.copilot.chat.editor.temporalContext.enabled": true,
  // 按住說話功能
  "inlineChat.holdToSpeech": true,
  // 輸入時不自動結束
  "inlineChat.finishOnType": false,

  // *******************************
  // GitHub Copilot Chat - 偵錯設定
  // *******************************
  // 啟用開始偵錯功能
  "github.copilot.chat.startDebugging.enabled": true,
  // 啟用選取範圍審查
  "github.copilot.chat.reviewSelection.enabled": true,
  // 啟用 Copilot 偵錯命令
  "github.copilot.chat.copilotDebugCommand.enabled": true,
  // 編輯時不使用時間上下文 (避免干擾)
  "github.copilot.chat.edits.temporalContext.enabled": false,

  // *******************************
  // GitHub Copilot Chat - 測試設定
  // *******************************
  // 啟用測試設定功能
  "github.copilot.chat.setupTests.enabled": true,
  // 顯示產生測試的 Code Lens
  "github.copilot.chat.generateTests.codeLens": true,
  // 測試產生指示
  "github.copilot.chat.testGeneration.instructions": [
    {
      "text": "Always use Traditional Chinese for test descriptions. Follow AAA pattern (Arrange/Act/Assert)."
    },
    {
      "file": ".copilot-test-instructions.md"
    }
  ],

  // *******************************
  // GitHub Copilot Chat - 自訂提示
  // *******************************
  // 使用指示檔案進行程式碼產生
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  // 程式碼產生的自訂指示（優先引用檔案，減少 inline text）
  "github.copilot.chat.codeGeneration.instructions": [
    {
      "text": "Always response in #zh-tw."
    },
    {
      "file": ".copilot-instructions.md"
    }
  ],
  // 程式碼審查的自訂指示
  "github.copilot.chat.reviewSelection.instructions": [
    {
      "text": "Always response in #zh-tw."
    },
    {
      "file": ".copilot-review-instructions.md"
    }
  ],
  // Git Commit 訊息產生指示
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Use Conventional Commits 1.0.0 with Traditional Chinese."
    },
    {
      "file": ".copilot-commit-message-instructions.md"
    }
  ],
  // Pull Request 描述產生指示
  "github.copilot.chat.pullRequestDescriptionGeneration.instructions": [
    {
      "text": "請一律使用正體中文來撰寫記錄"
    },
    {
      "file": ".copilot-pull-request-description-instructions.md"
    }
  ],

  // *******************************
  // GitHub Copilot Chat Edit
  // *******************************
  // 為測試建議相關檔案
  "github.copilot.chat.edits.suggestRelatedFilesForTests": true,
  // 從 Git 歷史建議相關檔案
  "github.copilot.chat.edits.suggestRelatedFilesFromGitHistory": true,

  // *******************************
  // GitHub Copilot Chat - Agent Mode
  // *******************************
  // 啟用 Agent 模式
  "chat.agent.enabled": true,
  // Agent 最大請求次數
  "chat.agent.maxRequests": 100,
  // 啟用任務執行（保守設定：建議人工審查高風險任務）
  "github.copilot.chat.agent.runTasks": false,
  // 啟用新工作區建立
  "github.copilot.chat.newWorkspaceCreation.enabled": true,
  // Terminal 捲軸行數 (Agent Mode 建議調高)
  "terminal.integrated.scrollback": 50000,

  // *******************************
  // MCP (Model Context Protocol) 設定
  // *******************************
  // 啟用 MCP
  "chat.mcp.enabled": true,
  // 停用自動探索 (避免干擾)
  "chat.mcp.discovery.enabled": false,
  // MCP 伺服器設定 (可依需求添加)
  "mcp": {
    "servers": {}
  },

  // *******************************
  // Chat 與編輯確認設定
  // *******************************
  // 確認編輯請求移除
  "chat.editing.confirmEditRequestRemoval": true,
  // 確認編輯請求重試
  "chat.editing.confirmEditRequestRetry": true,
  // 停用自動偵測參與者
  "chat.detectParticipant.enabled": false,
  // 啟用提示檔案
  "chat.promptFiles": true,
  // Chat 字體大小
  "chat.editor.fontSize": 15,
  // Chat 自動換行
  "chat.editor.wordWrap": "on",

  // *******************************
  // 視窗與介面設定
  // *******************************
  // 顯示命令中心
  "window.commandCenter": true,
  // Chat 命令中心
  "chat.commandCenter.enabled": true,
  // 命令選擇區在 Chat 視窗中詢問
  "workbench.commandPalette.experimental.askChatLocation": "chatView",
  // 停用預覽模式 (直接開啟檔案)
  "workbench.editor.enablePreview": false,

  // *******************************
  // 搜尋設定
  // *******************************
  // 空搜尋時執行語意搜尋
  "search.searchView.semanticSearchBehavior": "runOnEmpty",
  // 不追蹤符號連結
  "search.followSymlinks": false,
  // 不使用忽略檔案
  "search.useIgnoreFiles": false,

  // *******************************
  // 編輯器設定
  // *******************************
  // 啟用內嵌建議
  "editor.inlineSuggest.enabled": true,
  // 顯示摺疊的編輯建議
  "editor.inlineSuggest.edits.showCollapsed": true,
  // 儲存時自動格式化
  "editor.formatOnSave": true,
  // 儲存時執行的程式碼動作
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit",
    "source.organizeImports": "explicit"
  },
  // 顯示括號配對輔助線
  "editor.guides.bracketPairs": true,
  // 基於所有文件的文字建議
  "editor.wordBasedSuggestions": "allDocuments",

  // *******************************
  // 檔案總管設定
  // *******************************
  // 啟用檔案巢狀顯示
  "explorer.fileNesting.enabled": true,

  // *******************************
  // 檔案設定
  // *******************************
  // 檔案關聯
  "files.associations": {
    "*.json": "jsonc",
    ".prettierrc": "jsonc"
  },
  // 檔案編碼
  "files.encoding": "utf8",
  // 自動猜測編碼
  "files.autoGuessEncoding": true,
  // 行尾字元 (統一使用 LF)
  "files.eol": "\n",
  // 大檔案記憶體限制
  "files.maxMemoryForLargeFilesMB": 8192,
  // 排除監看的檔案
  "files.watcherExclude": {
    "**/.git/*/**": true,
    "**/node_modules/*/**": true,
    "**/dist/*/**": true,
    "**/coverage/*/**": true
  },

  // *******************************
  // TypeScript 設定
  // *******************************
  // 啟用參考 Code Lens
  "typescript.referencesCodeLens.enabled": true,
  // 自動匯入建議
  "typescript.suggest.autoImports": true,
  // TypeScript SDK 路徑
  "typescript.tsdk": "./node_modules/typescript/lib",
  // TypeScript Server 記憶體限制
  "typescript.tsserver.maxTsServerMemory": 8192,
  // 檔案移動時更新匯入
  "typescript.updateImportsOnFileMove.enabled": "always",

  // *******************************
  // Terminal 設定
  // *******************************
  // Terminal 編碼
  "terminal.integrated.encoding": "utf8",
  // Windows 預設使用 PowerShell
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  // PowerShell 設定為 UTF-8
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "args": ["-NoExit", "-Command", "chcp 65001"]
    }
  },

  // *******************************
  // 無障礙功能設定
  // *******************************
  // 語音辨識語言
  "accessibility.voice.speechLanguage": "zh-TW",
  // 停用自動合成
  "accessibility.voice.autoSynthesize": "off",
  // 語音逾時設定 (10 秒)
  "accessibility.voice.speechTimeout": 10000,
  // 忽略程式碼區塊
  "accessibility.voice.ignoreCodeBlocks": true,

  // *******************************
  // Live Preview 設定
  // *******************************
  // 儲存檔案時自動重新整理預覽
  "livePreview.autoRefreshPreview": "On Changes to Saved Files",

  // *******************************
  // 遙測設定
  // *******************************
  // 完全停用遙測
  "telemetry.telemetryLevel": "off",

  // *******************************
  // 各語言特定設定
  // *******************************
  // JavaScript - 停用自動格式化 (由 ESLint 處理)
  "[javascript]": {
    "editor.formatOnSave": false
  },
  // JSON - 停用自動格式化
  "[json]": {
    "editor.formatOnSave": false
  },
  // JSONC - 停用自動格式化
  "[jsonc]": {
    "editor.formatOnSave": false
  },
  // LESS - 使用 Stylelint 格式化
  "[less]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "stylelint.vscode-stylelint"
  },
  // Markdown - 停用自動格式化
  "[markdown]": {
    "editor.formatOnSave": false
  },
  // TypeScript - 使用 Prettier 格式化
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}